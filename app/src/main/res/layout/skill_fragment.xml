<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0398fc">

    <TextView
        android:id="@+id/tvSkill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Skills"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvtechnical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My technical skills"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSkill" />

    <ImageView
        android:id="@+id/ivDev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dev"
        android:layout_marginLeft="16sp"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ivDev2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dev2"
        android:layout_marginLeft="16sp"
        android:paddingLeft="2sp"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        app:layout_constraintStart_toStartOf="@+id/ivDev"/>

    <TextView
        android:id="@+id/Frontend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frontend Developer"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ivDev2"
        app:layout_constraintTop_toBottomOf="@id/guideline1"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/tvfront"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developing for the past 1 year"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@+id/Frontend"
        app:layout_constraintStart_toEndOf="@id/ivDev2"
        android:layout_marginLeft="5dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="132dp" />

    <ImageView
        android:id="@+id/ivAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_android"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        android:layout_marginLeft="22sp"/>

    <TextView
        android:id="@+id/Android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Developer"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/ivAndroid"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/tvAnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developing for the past 6 months"
        android:fontFamily="@font/poppins"
        app:layout_constraintTop_toBottomOf="@+id/Android"
        app:layout_constraintStart_toEndOf="@id/ivAndroid"
        android:layout_marginLeft="8dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="213dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="298dp" />


</androidx.constraintlayout.widget.ConstraintLayout>